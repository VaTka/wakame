
# Server
PORT=3001
DB_PATH=./data.sqlite

# Fonts (PDF)
PDF_FONT=./fonts/NotoSansJP-VariableFont_wght.ttf

# Serial (used by ingestor.js)
SERIAL_PORT=/dev/tty.BT62-BB62
BAUD_RATE=9600

# Error thresholds (g)
ERROR_MIN=0
ERROR_MAX=50000

# Simulator (generator.js)
GEN_TICK_MS=500
GEN_AMP=500
GEN_NOISE=5
GEN_PROCESS=both   # 'molding' | 'packaging' | 'both'

PROCESS=molding
